{
  "functions": {
    "src/app/api/**/*.ts": {
      "maxDuration": 60
    }
  },
  
  "buildCommand": "prisma generate && prisma db push && next build",
  "installCommand": "pnpm install",
  "framework": "nextjs",
  "env": {
    "DATABASE_URL": "@postgres_url",
    "DIRECT_URL": "@postgres_url",
    "NEXTAUTH_SECRET": "@nextauth_secret",
    "NEXTAUTH_URL": "@nextauth_url"
  },
  "build": {
    "env": {
      "DATABASE_URL": "@postgres_url",
      "DIRECT_URL": "@postgres_url"
    }
  }
}
